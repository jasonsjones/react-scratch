{
    "name": "react-scratch",
    "version": "0.1.0",
    "description": "A bare-bones react project build from scratch",
    "main": "index.js",
    "scripts": {
        "dev": "webpack-dev-server --open",
        "clean": "rimraf dist/",
        "prebuild": "yarn clean",
        "build": "webpack --config webpack.prod.config.babel.js",
        "lint": "eslint webpack.config.babel.js tools/**/*.js src/**/*.js",
        "test": "jest"
